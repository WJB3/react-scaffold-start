{
    "compilerOptions":{
        "module":"commonjs",
        "target":"es5",
        "allowJs":true,
        "jsx":"react",
        "sourceMap": true,
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths":{
            "@/*":["src/*"]
        }
    },
    "include": [
        "src/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}